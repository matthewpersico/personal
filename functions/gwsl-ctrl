# -*- sh -*-
# shellcheck shell=bash
# shellcheck disable=SC2155 #https://github.com/koalaman/shellcheck/wiki/SC2155
# shellcheck disable=SC2002 #https://github.com/koalaman/shellcheck/wiki/SC2002

# gwsl-ctrl

# Interface with gWSL
gwsl-ctrl ()
{
    declare action=$1; shift

    case $action in
        running | up | active )
            tasklist.exe | grep  -i gwsl | grep -q -v grep
            return
            ;;
        set-envvars )
            # shellcheck disable=SC2016 #https://github.com/koalaman/shellcheck/wiki/SC2016
            export WSL_HOST=$(powershell.exe -Command 'Get-NetAdapter | Where-Object {$_.Name -Match "vEthernet \(WSL \(Hyper-V firewall\)\)"} | Get-NetIPAddress -AddressFamily IPv4 | Select -ExpandProperty IPAddress' |  tr -d '\r' | xargs)
            if [[ -z $WSL_HOST ]]; then
                cmd-echo --id gwsl-ctrl --ec "WSL_HOST could not be set. No DISPLAY, no PULSE_SERVER will be set"
                false; return
            fi
            export DISPLAY=$WSL_HOST:0.0 #GWSL
            export PULSE_SERVER=tcp:$WSL_HOST #GWSL
            true; return
            ;;
        * ) cmd-echo --id gwsl-ctrl --ec "Action '$action' not defined"
            false; return
            ;;
    esac
}
autotrack gwsl-ctrl "$0"
