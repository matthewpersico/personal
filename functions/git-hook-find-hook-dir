# -*- sh -*-

# <Function Class: git>
# <Function Justification: none>

git-hook-find-hook-dir ()
{
    echo "${FUNCNAME[0]} \"$@\" ## $(date +%Y%m%d%H%M%S)" >> ${HOME}/personal/data/funcsaudit ## This is audit
    local dotgit=$(git-find-git-dir)
    if [ -n "$dotgit" ] && [ -d $dotgit/hooks ]
    then
        echo $dotgit/hooks
        return $OK
    else
        echo
        return $NOT_OK
    fi
}
