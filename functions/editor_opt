# -*- sh -*-

# <Function Class: util>

editor_opt () {
    ## Args are
    ##   default value for editor
    ##   other args
    ## Echos the editor value
    ## Return status is the number of shifts to perform
    local editor=$1;shift
    local shifts=0
    if [ "$1" = '--editor' ]
    then
        editor=$2;shifts=2
    elif [[ $1 =~ ^--(.*) ]]
    then
        editor=${BASH_REMATCH[1]};shifts=1
    fi
    echo $editor
    return $shifts
}


