# -*- sh -*-

# <Function Class: util>

tail_number_add ()
{
    ##@@ none||none||tail_number_add||Add a '(' and an index number to each argument.

    local count=$#
    local pad=${#count}
    local i=0
    local out
    for a in "$@"
    do
        ((i+=1))
        local e=$(printf '%s(%d' "$a" $i)
        out="$out $e"
    done
    echo "$out"
    return $?
}


