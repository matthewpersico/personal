# -*- sh -*-

# <Function Class: git

git-find-conflicts ()
{
    echo "${FUNCNAME[0]} \"$@\" ## $(date +%Y%m%d%H%M%S)" >> ${HOME}/personal/data/funcsaudit ## This is audit
    ##@@ 0001||group||git-find-conflicts||search git repo files for the opening conflict marker (<<<<<<)

    local opts='-l'
    if [ "$1" != '' ]
    then
        opts="$@"
    fi
    git grep $opts -E '^<<<<<<<' | sort -u
}


