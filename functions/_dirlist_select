#!/usr/bin/env bash
## shellcheck disable=SC2164 # we take care of cd checks ourselves.

# <Function Class: cd>
# <Function Justification: env mod>

_dirlist_select ()
{
    local -a numbered
    local i=0
    local a
    for a in "$@"; do
        ((i+=1))
        numbered+=("$(printf '%s (%d\n' "$a" "$i")")
    done
    local PS3="Choose by number, - for prior, q to quit: "
    local d
    select d in "${numbered[@]}"; do
        if [ -n "$d" ]; then
            d="$(echo "${d% (*}" | sed "s|$DIRLIST_PWD_INDIC||" | sed "s|\\~|$HOME|")"
            if [ -d "$d" ]; then
                # shellcheck disable=SC2164
                builtin cd "$d"
                break
            else
                echo "$d no longer exists" >&2
            fi
        else
            local reply
            reply="${REPLY,,}"
            if [ "$reply" = 'q' ]; then
                return
            elif [ "$reply" = '-' ]; then
                # shellcheck disable=SC2164
                builtin cd -
                return
            else
                echo "'$REPLY' is an invalid choice"
            fi
        fi
    done
}
