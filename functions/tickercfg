# -*- sh -*-

# <Function Class: xterm>
# <Function Justification: none>

tickercfg ()
{
    local i=0;
    local M="::: $* :::"
    local T="$M$M$M$M"
    local S ## First time around clears the prompt
    local f
    f="/tmp/ticker.$(hostname).$$"
    echo "$M" > "$f"
    while sleep .2s && [ -r "$f" ]
    do
        settitle "$S"
        (( ++i>${#M} )) && i=1
        S=${T:i:40}
    done
}
