# -*- sh -*-

# <Function Class: perl>

perl-list-root()
{
    local roottolist=$1
    [ -z "$roottolist" ] && roottolist=${HOME}/perl
    roottolist=$(realpath $roottolist)
    listpath -p PERL5LIB | grep $roottolist
    listpath -p PATH | grep $roottolist/bin
    listpath -p MANPATH | grep $roottolist/man
}


