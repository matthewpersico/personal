# -*- sh -*-

# <Class: bash arrays>
# <Function Justification: env mod>

avalues ()
{
    echo "${FUNCNAME[0]} \"$@\" ## $(date +%Y%m%d%H%M%S)" >> ${TILDAE:-$HOME}/personal/data/funcsaudit ## This is audit
    ##@@ none||none||avalues||Print all the values of the array named in arg1 to stdout, separated by a space. If the -list option is specified, then print each one on a separate line.
    local list=0
    if [ "$1" = '-list' ]
    then
        list=1
        shift;
    fi
    declare -n array_alias="$1"
    if ((list))
    then
        for v in ${array_alias[@]}
        do
            echo $v
        done
    else
        echo ${array_alias[@]}
    fi
    return $(true)
}
