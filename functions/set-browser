# -*- sh -*-
# shellcheck shell=bash

# set-browser

# <Function Class: eh>
# <Function Justification: env mod>

set-browser ()
{
    local lb="$BROWSER" ## local browser
    if [[ $1 = --override ]]; then
        lb=''
        shift
    fi

    if [[ -z $lb ]]; then
        for browser in "$@" junktoshutupshellcheck; do
            if [[ -e $browser ]]; then
                lb="$browser"
                break
            elif fullpath=$(type -P "$browser"); then
                lb="$fullpath"
                break
            fi
        done
        if [[ -n $lb ]]; then
            export BROWSER=$lb
            git web --set-browser "$BROWSER"
        fi
    fi
}
autotrack set_browser "$0"
