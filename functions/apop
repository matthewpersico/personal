#!/usr/bin/env bash

# <Function Class: bash arrays>
# <Function Justification: env mod>

apop ()
{
    declare -n array=$1
    shift
    declare _i=0
    for _v ; do
        declare -n _var=$_v
        ((_i+=1))
        # shellcheck disable=SC2034 #https://github.com/koalaman/shellcheck/wiki/SC2034
        _var=${array[-_i]}
    done
    array=("${array[@]:0:$((${#array[@]}-_i))}")
}
