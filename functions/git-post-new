# -*- sh -*-

# <Function Class: git>
# <Function Justification: none>

git-post-new ()
{
    ##@@ 0001||group||git-post-new||

    func-echo "Making a $GITFUNCS_CHANGELOG_NAME file"
    touch $(git-root)/$GITFUNCS_CHANGELOG_NAME

    if [ "$1" = '-t' ]
    then
        func-echo "Setting timestamps..."
        git-retimestamp
    fi
}
