# -*- sh -*-

# <Function Class: git>
# <Function Justification: none>

git-parse-remote-v ()
{
    ##@@ 0001||group||git-parse-remote-v||

    gitfuncs_remotes=()
    local remotes=$( git remote -v | sed -r -e 's/\(.*//' -e 's/ +$//' -e 's/\t/=/' | sort -ru)
    [ -z "$remotes" ] && return 1
    for i in $remotes
    do
        key=${i%=*}
        value=${i#*=}
        gitfuncs_remotes[$key]=$value
    done
    return 0
}
