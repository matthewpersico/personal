#!/usr/bin/env bash

# <Function Class: git>
# <Function Justification: Efficiency - in PS1>

git-stash-get-count ()
{
    local no0=0; [ "$1" = '-no0' ] && no0=1 && shift;
    local pre=$1;shift
    local post=$1;shift
    if git in-a-repo
    then
        local c
        c=$(git stash list 2>/dev/null | wc -l)
        ((c==0)) && ((no0)) && return
        echo "${pre}${c}${post}"
    fi
}
