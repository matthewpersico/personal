# -*- sh -*-

# <Function Class: xterm>
# <Function Justification: none>

ticker ()
{
    echo "${FUNCNAME[0]} \"$@\" ## $(date +%Y%m%d%H%M%S)" >> ${TILDAE:-$HOME}/personal/data/funcsaudit ## This is audit
    if [ -r /tmp/ticker.$(hostname).$$ ]
    then
        echo Found /tmp/ticker.$(hostname).$$
        echo Looks like there is already a ticker running
        echo with the banner:
        echo
        cat /tmp/ticker.$(hostname).$$
    else
        tickercfg "$@" &
    fi
}
