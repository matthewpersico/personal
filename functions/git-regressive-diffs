# -*- sh -*-

# <Function Class: git

git-regressive-diffs ()
{
    cat <<EOF
for i in $(git log -l bin/dpkg-buildd-cleanup | grep -E '^commit' | sed 's/commit //')
do
  if [ -z "$newer" ]
  then
     newer=$i
  elif [ -z "$older" ]
  then
     older=$i;
  else
     git diff $older $newer
     newer=$older
     older=$i
done
## last one
diff $older $newer
EOF
}


