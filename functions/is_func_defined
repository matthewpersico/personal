# -*- sh -*-

# <Function Class: util>
# <Function Justification: none>

is_func_defined ()
{
    ##@@ none||none||is_func_defined||Is arg1 defined as a function. Returns 0 for no, 1 for yes.
    if [ -n "$(type $1 2>/dev/null | head -1 | grep 'is a function')" ]
    then
        return 0 ## UNIX TRUE
    else
        return 1 ## UNIX FALSE
    fi
}
