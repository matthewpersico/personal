# -*- sh -*-

# <Function Class: hist>
# <Function Justification: env mod>

load_history ()
{
    local loadhist=$1
    if [ -z "$1" ]
    then
        select loadhist in $(ls -rt "$(dirname "$HISTFILE")/*")
        do
            if [ -n "$loadhist" ]
            then
                break
            fi
        done
    fi
    if [ -n "$loadhist" ]
    then
        loadhist=$(dirname "$HISTFILE")/$(basename "$loadhist")
        cat "$loadhist" >> "$HISTFILE"
    fi
}
