# -*- sh -*-

# <Function Class: util>
# <Function Justification: none>

smartwc ()
{
    echo "${FUNCNAME[0]} \"$@\" ## $(date +%Y%m%d%H%M%S)" >> ${HOME}/personal/data/funcsaudit ## This is audit
    local filecount=0
    for i in $@
    do
        [ -f $i ] && ((filecount+=1))
    done
    if ((filecount == 1))
    then
        wc "$@" | perl -ap -e '$_ =~ s/$F[-1]//'
    else
        wc "$@"
    fi
}
