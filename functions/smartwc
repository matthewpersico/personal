# -*- sh -*-

# <Function Class: util>
# <Function Justification: none>

smartwc ()
{
    local filecount=0
    local i
    for i in "$@"
    do
        [ -f "$i" ] && ((filecount+=1))
    done
    if ((filecount == 1))
    then
        wc "$@" | perl -ap -e '$_ =~ s/$F[-1]//'
    else
        wc "$@"
    fi
}
