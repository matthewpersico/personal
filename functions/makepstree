# -*- sh -*-

# <Function Class: dotfiles>

makepstree ()
{
    local os=$(uname -o)
    case $os in
        Cygwin )
            echo Using /usr/bin/pstree
            ln -s /usr/bin/pstree ~/personal/bin/pstree
            ;;
        * )
            echo Creating local pstree
            builtin cd ~/personal/src/pstree
            make
            builtin cd -
            ;;
    esac
}


