# -*- sh -*-

# <Function Class: dotfiles>

makepstree ()
{
    echo "${FUNCNAME[0]} \"$@\" ## $(date +%Y%m%d%H%M%S)" >> ${TILDAE:-$HOME}/personal/data/funcsaudit ## This is audit
    local os=$(uname -o)
    case $os in
        Cygwin )
            echo Using /usr/bin/pstree
            ln -s /usr/bin/pstree ${TILDAE:-$HOME}/personal/bin/pstree
            ;;
        * )
            echo Creating local pstree
            builtin cd ${TILDAE:-$HOME}/personal/src/pstree
            make
            builtin cd -
            ;;
    esac
}


