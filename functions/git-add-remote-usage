# -*- sh -*-

# <Function Class: git>
# <Function Justification: none>

git-add-remote-usage ()
{
    echo "${FUNCNAME[0]} \"$@\" ## $(date +%Y%m%d%H%M%S)" >> ${HOME}/personal/data/funcsaudit ## This is audit
    local cmd=$1;shift
    local protocol=$1
    local protocolarg=$1
    if [ -z "$protocol" ]
    then
        protocol='{protocolurl}'
        protocolarg='protocol'
    else
        protocolarg=''
    fi

    cat <<EOUSAGE
Usage: $cmd $protocolarg namespace
       Adds ${protocol}:namespace/current_repo as a remote named 'namespace'
       to the current repo. Use this to get at people's branches on
       their repo fork.
EOUSAGE
}
