[alias]
    st = status
    stnou = status -uno
    stl = status .
    co = checkout
    br = branch
    branches = branch
    unstage = reset HEAD --
    cdiff = diff --cached
    diffc = diff --cached
    logn = log --name-only
    logh = log -1
    uncheckout = checkout --
    rollback = checkout --
    commitv = commit --verbose
    testrealclean = clean -dxn
    realcleantest = clean -dxn
    dorealclean = clean -dxf
    realcleando = clean -dxf
    testclean = clean -dn
    cleantest = clean -dn
    doclean = clean -df
    cleando = clean -df
    alias-list =  config --get-regexp alias

[push]
    default = simple
; Uncomment the following to force all pushes to require repo and branch args.
; [remote]
;     pushdefault = PUSHREMOTE_NOT_CONFIGURED

[merge]
    conflictstyle = diff3

[color]
    branch = auto

