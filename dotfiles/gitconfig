[alias]
    aliases = config --get-regexp alias
    br = branch
    branches = branch
    cdiff = diff --cached
    cleando = clean -df
    cleantest = clean -dn
    co = checkout
    commitv = commit --verbose
    diffc = diff --cached
    doclean = clean -df
    dorealclean = clean -dxf -e wt
    grepl = grep -l
    grepn = grep -n
    grepnc = grep --no-color
    grepnp = !git --no-pager grep
    is = what
    log-s = log --pretty=oneline --abbrev-commit
    ls = ls-files
    pop = stash pop
    realcleando = clean -dxf
    realcleantest = clean -dxn
    restore = checkout --
    rollback = checkout --
    root = rev-parse --show-toplevel
    shame = blame -w -M
    st = status
    stl = status .
    stnc = status --no-color
    stnou = status -uno
    testclean = clean -dn
    testrealclean = clean -dxn
    uncheck = checkout --
    uncheckout = checkout --
    unstage = reset HEAD --
    which = what
    whose-line-is-it-anyway = blame

[core]
    pager = less -RF
    editor = emacsclient -c
    excludesFile = /home/mpersico5/.gitignore

[push]
    default = simple
; Uncomment the following to force all pushes to require repo and branch args.
; [remote]
;     pushdefault = PUSHREMOTE_NOT_CONFIGURED

[merge]
    conflictstyle = diff3

[diff]
	wsErrorHighlight = all

;; Color info...
;; https://git-scm.com/docs/git-config
;; /usr/share/X11/rgb.txt (find /usr -name rgb.txt)

[color]
    branch = auto

[color "status"]
    added = green black
    changed = yellow black
    untracked = red black bold

[color "diff"]
    frag = cyan black
    old = red
    new = 22 ;; See https://www.google.com/search?q=xterm+256+color+codes
    commit = yellow black

