[alias]
    alias-list = config --get-regexp alias
    br = branch
    branches = branch
    cdiff = diff --cached
    cleando = clean -df
    cleantest = clean -dn
    co = checkout
    commitv = commit --verbose
    diffc = diff --cached
    doclean = clean -df
    dorealclean = clean -dxf
    grepl = grep -l
    grepn = grep -n
    grepnc = grep --no-color
    logh = log -1
    logn = log --name-only
    realcleando = clean -dxf
    realcleantest = clean -dxn
    rollback = checkout --
    st = status
    stl = status .
    stnc = status --no-color
    stnou = status -uno
    testclean = clean -dn
    testrealclean = clean -dxn
    uncheck = checkout --
    uncheckout = checkout --
    unstage = reset HEAD --

[push]
    default = simple
; Uncomment the following to force all pushes to require repo and branch args.
; [remote]
;     pushdefault = PUSHREMOTE_NOT_CONFIGURED

[merge]
    conflictstyle = diff3

[color]
    branch = auto

