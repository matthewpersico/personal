#!bash

XTERM_F_Black=30
XTERM_F_Red=31
XTERM_F_Green=32
XTERM_F_Yellow=33
XTERM_F_Blue=34
XTERM_F_Magenta=35
XTERM_F_Cyan=36
XTERM_F_White=37
XTERM_B_Black=40
XTERM_B_Red=41
XTERM_B_Green=42
XTERM_B_Yellow=43
XTERM_B_Blue=44
XTERM_B_Magenta=45
XTERM_B_Cyan=46
XTERM_B_White=47
XTERM_F_RESET=0
XTERM_F_Bold=1

xterm_color ()
{
    typeset f=$1; shift
    typeset b=$2; shift

    if [ -n "$f" ]
    then
        echo -e "\e[$fm"
    fi
    if [ -n "$b" ]
    then
        echo -e "\e[$bm"
    fi
}

alias xterm_white_red="xterm_color $XTERM_F_White $XTERM_B_Red"
alias xterm_black_red="xterm_color $XTERM_F_Black $XTERM_B_Red"
alias xterm_white_black="xterm_color $XTERM_F_White $XTERM_B_Black"
alias xterm_vm="xterm_color $XTERM_F_White $XTERM_B_Black"
