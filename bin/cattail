#!/usr/bin/env bash

# cattail

[[ $1 =~ -h ]] && bash-usage "$0" && exit 0

if [[ $1 =~ -z ]]
then
    shift
    tail -n +1 -f "$@" |  \
        zenity --text-info --auto-scroll \
               --width=1320 --height=800 \
               --title "cattail $*" &
else
    tail -n +1 -f "$@"
fi

exit $?

## You can add sections with =head1, but stick to =item for section breakdowns,
## not =head2/3/etc/.

:<<'__PODUSAGE__'
=head1 NAME

cattail - cat the file from the start, then continue to tail -f it

=head1 SYNOPSIS

 cattail [-z] file
 cattail [-h] file

=head1 DESCRIPTION

cat the file from the start, then continue to tail -f it.

=head1 ARGUMENTS

=over 4

=item file

File to track.

=back

=head1 OPTIONS

=over 4

=item -z

Send the output to a zenity box.

=item -h

Print the help.

=back

=cut

__PODUSAGE__
