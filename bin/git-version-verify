#!/usr/bin/env bash

## git-version-verify

if [ ! "$($REALGIT --version)" = "$REALGIT_VERIFIED_VERSION_STRING" ]
then
    cmd-echo -id "$1" -e -- \
             "Verified to $REALGIT_VERIFIED_VERSION_STRING," \
             "but $($REALGIT --version) is installed." \
             "Please investigate."
    exit 1
else
    exit 0
fi
