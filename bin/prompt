#!/usr/bin/env bash

# pick
if [[ "$1" =~ ^-h ]]; then
    bash-usage "$0"
    exit 0
fi

declare prompt_text
prompt_text="$1";shift
declare prompt
prompt=$(echo -e "$prompt_text" | perl -p -e 's/\s+/ /g')
read -r -p "$prompt" resp
echo "$resp"
exit 0

:<<'__PODUSAGE__'
=head1 NAME

prompt - prompt for a response

=head1 SYNOPSIS

  resp=$(prompt "prompt text:")

=head1 DESCRIPTION

Print the prompt text, print the user's choice.

=head1 ARGUMENTS

=over 4

=item "prompt text:"

Prints this text, waits for your response. Be sure to include any punctuation.

=back

=cut

__PODUSAGE__
