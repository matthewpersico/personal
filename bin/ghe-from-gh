#!/usr/bin/env bash

# ghe-to-gh

# Pull changes on ghe to gh
if [[ $1 =~ ^-+h ]] \
   || [[ -z $1 ]]; then
    cat <<EOU
usage: ghe-from-gh source

Take the changes on the remote branch "gh-source" (where it is assumed that
"gh" is remote to GitHub) and progagate them to the "source" branch in the
GitHub Enterprise repo.  "origin". After testing you can then propigate to all
theother local branches with 'git branch --sync source origin'.

EOU
    exit 0
fi

git-branch --sync "gh-$1" "origin/$1"
