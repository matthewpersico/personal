## -*- sh -*-

## to-ext

source $BASH_INC_DIR/on_exit.binc

declare moreopts=1
declare opt_since=''
declare opt_dirty=0
while [[ "$1" =~ ^- ]] && ((moreopts))
do
    ## Strip all leading dashes here so that -foo and --foo can both
    ## be processed as 'foo'.
    declare original="$1"
    declare option
    option=$(dashstripper $original)
    shift

    case $option in
        since )
            opt_since=$1;  ## The last sha in the SOURCE repo that was
                           ## successfully shar'ed, shipped and integrated with
                           ## a particular target.
            shift
            ;;
        dirty )
            opt_dirty=1;
            ;;
        help )
            printf '%s\n' "$(sed '0,/^__USAGE__$/d' $0)"
            exit 0
            ;;
        debug | x )
            set -x
            ;;
        --)
            moreopts=0
            ;;
        * )
            echo "$original is an invalid option. See $0 --help";
            exit 1
            ;;
    esac
done

git_sha_file="git-sha"

## Check that we are clean. Otherwise the git-log-dump will not match with mods
## on disk. We don't count any existing git-log-dump or git-rms as a problem.
if (($(git st --porcelain 2>&1 | grep -E -v 'git-(log-dump|rms|links|sha)' 2>&1 | wc -l)))
then
    echo "Repo not clean:"
    git status
    if ((opt_dirty))
    then
        echo "Continuing: --dirty specified. git-log-dump may not match code on disk."
    else
        echo "Stopping."
        exit 1
    fi
fi

if [ -z $opt_since ]
then
    if [ -f $git_sha_file ]
    then
        git checkout $git_sha_file
        opt_since=$(cat $git_sha_file | sed 's/commit //')
    fi
fi

## Write the commit log to text. That will keep track of the modifications,
## perhaps to create a decent commit message on the other side.
git log | head -1 > $git_sha_file
git log > git-log-dump

## Non git members to add to the shar
declare additionals="--text-files git-log-dump"

## The shar file
sharout=personal-bb-$(date +%Y-%m-%d).shar

if [ -z "$opt_since" ]
then
    ## Without a sha to compare to, grab all files
    files=$(git ls-files)
else
    ## Check the files changed from sha time to now and segregate the removed
    ## ones for special processing.
    tmp=$(mktemp --suffix=.to-ext)
    rm_on_exit $tmp
    for i in $(git diff --name-only $opt_since)
    do
        if [ -r $i ]
        then
            files="$files $i"
        else
            rms="$rms $i"
        fi
    done
    if [ -n "$rms" ]
    then
        echo $rms > git-rms
        additionals="$additionals git-rms"
    fi
fi

## Handle links
tmp="$files"
files=''
links=''
rm -f git-links
gr=$(git-root)
bngr=$(basename $gr)
for i in $tmp
do
    if [ -h $i ]
    then
        link=$i
        tgt=$(readlink $i | sed "s|$gr|$bngr|")
        echo "$i:$tgt" > git-links
    else
        files="$files $i"
    fi
done
[ -s git-links ] && additionals="$additionals git-links"

## Make it.
shar -q -m -o $sharout -p -M $files $additionals
echo sharfile is $(ls ${sharout}*)

echo "Don't forget to check in $git_sha_file"

exit 0

__USAGE__

to-ext - Create a shar to copy files.

Uses a sha passed via --since or from the file 'git-sha' to figure out what
files have been added, changed or removed. Dumps the log to file
'git-log-dump', puts removals in file 'git-rms', creates a shar of all the
files.
