# -*- sh -*-
# shellcheck shell=bash

# perl.mopenv
if [[ -d "$HOME/.plenv" ]]; then
    addpath -f -m -x "$HOME/.plenv/bin"
    eval "$(plenv init -)"
fi

if [[ -e "$HOME/personal/bin/plenv.mopenv" ]]; then
    # shellcheck disable=SC1091 #https://github.com/koalaman/shellcheck/wiki/SC1091
    . "$HOME/personal/bin/plenv.mopenv"
fi

PERLENV_LOADED=1
export PERLENV_LOADED
