# -*- sh -*-

# pythonfuncs

PYTHONFUNCS_FILE=${BASH_SOURCE[0]}

auditfuncs_init $PYTHONFUNCS_FILE

pythonfuncs_edit ()
{
    pythonfuncs_audit "$@"
    xo $PYTHONFUNCS_FILE
}
export -f pythonfuncs_edit
## I define functions with '_' and aliases with '-' because the emaacs modes
## that parse for functions to generate jump lists don't see functions with '-'
## in their name. Ugh.
alias pythonfuncs-edit=pythonfuncs_edit

pythonfuncs_reload ()
{
    pythonfuncs_audit "$@"
    . $PYTHONFUNCS_FILE
}
export -f pythonfuncs_reload
alias pythonfuncs-reload=pythonfuncs_reload

python_dbg ()
{
    echo Do these
    echo ipython
    echo run -d script arg arg...
    echo s - step in
    echo n - next
    echo up - up one stack level. Use this instead
    echo      of run-till-return
    echo type a variable to print it, with overloads
    echo      do not know the raw print yet
}
export -f python_dbg
