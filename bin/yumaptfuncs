# -*- sh -*-

# yumaptfuncs

## I chose to use 'local' because it is more semantically correct for what we
## are doing than 'declare' is, and 'typeset' is deprecated except for ksh
## compatibility.

YUMAPTFUNCS_FILE=${BASH_SOURCE[0]}

yumaptfuncs_edit ()
{
    xo $YUMAPTFUNCS_FILE
}
export -f yumaptfuncs_edit
alias yumaptfuncs-edit=yumaptfuncs_edit
alias aptfuncs_edit='yumaptfuncs_edit '
alias aptfuncs-edit='yumaptfuncs_edit '
alias yumfuncs_edit='yumaptfuncs_edit '
alias yumfuncs-edit='yumaptfuncs_edit '

yumaptfuncs_reload ()
{
    . $YUMAPTFUNCS_FILE
}
export -f yumaptfuncs_reload
alias yumaptfuncs-reload=yumaptfuncs_reload
alias aptfuncs_reload='yumaptfuncs_reload '
alias aptfuncs-reload='yumaptfuncs_reload '
alias yumfuncs_reload='yumaptfuncs_reload '
alias yumfuncs-reload='yumaptfuncs_reload '

apt_update ()
{
    sudo apt-get update "$@"
}
export -f apt_update
alias apt-update=apt_update

apt_upgrade ()
{
    sudo apt-get upgrade "$@"
}
export -f apt_upgrade
alias apt-upgrade=apt_upgrade

apt_install ()
{
    sudo apt-get install "$@"
}
export -f apt_install
alias apt-install=apt_install

apt_remove ()
{
    sudo apt-get remove "$@"
}
export -f apt_remove
alias apt-remove=apt_remove

yum_update ()
{
    sudo yum update "$@"
}
export -f yum_update
alias yum-update=yum_update

yum_list ()
{
    sudo yum list "$@"
}
export -f yum_list
alias yum-list=yum_list

yum_install ()
{
    sudo yum install "$@"
}
export -f yum_install
alias yum-install=yum_install

yum_erase ()
{
    sudo yum erase "$@"
}
export -f yum_erase
alias yum-erase=yum_erase
alias yum_uninstall=yum_erase
alias yum-uninstall=yum_erase

yum_group_list ()
{
    sudo yum group list "$@"
}
export -f yum_group_list
alias yum-group-list=yum_group_list

yum_group_install ()
{
    sudo yum group install "$@"
}
export -f yum_group_install
alias yum-group-install=yum_group_install
