# -*- sh -*-

# yumaptfuncs
## I chose to use 'local' because it is more semantically correct for what we
## are doing than 'declare' is, and 'typeset' is deprecated except for ksh
## compatibility.

YUMAPTFUNCS_FILE=${BASH_SOURCE[0]}
alias yumaptfuncs-edit='xo $YUMAPTFUNCS_FILE '
alias yumaptfuncs-reload='. $YUMAPTFUNCS_FILE '

alias apt-build-dep='sudo apt-get build-dep '
alias apt-install-deps='sudo apt-get build-dep '
alias apt-install='sudo apt-get install '
alias apt-remove='sudo apt-get remove '
alias apt-update='sudo apt-get update '
alias apt-upgrade='sudo apt-get upgrade '
alias aptfuncs-edit='yumaptfuncs-edit '
alias aptfuncs-reload='yumaptfuncs_reload '
alias yum-erase='sudo yum erase '
alias yum-group-install='sudo yum group install '
alias yum-group-list='sudo yum group list '
alias yum-install='sudo yum install '
alias yum-list='sudo yum list '
alias yum-uninstall='yum-erase '
alias yum-update='sudo yum update '
alias yumfuncs-edit='yumaptfuncs_edit '
alias yumfuncs-reload='yumaptfuncs_reload '
