# -*- sh -*-

# xfuncs

XFUNCS_FILE=${BASH_SOURCE[0]}

auditfuncs_init $XFUNCS_FILE
safe_func_export xfuncs_audit

. $(which controlfuncs_build) $XFUNCS_FILE

x-is-available ()
{
    if [ -z "$XFUNCS_X_IS_AVAILABLE" ]
    then
        (xrandr || xwininfo || false ) >/dev/null 2>&1
        XFUNCS_X_IS_AVAILABLE=$?
        export XFUNCS_X_IS_AVAILABLE
    fi
    return $XFUNCS_X_IS_AVAILABLE
}

x-current-root-height ()
{
    x-is-available;
    if [ ! "$?" = "${TRUE}" ]
    then
        return $FALSE
    fi
    echo $(xwininfo -root | grep Height | sed 's/.* //')
    return $TRUE
}
