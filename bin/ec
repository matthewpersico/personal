## -*- sh -*-
finddepth='-maxdepth 1'
verbose=''
rmi=''
while getopts ":rvi": opt
do
    case $opt in
	i ) rmi='-i'
	    ;;
	v ) verbose='-v'
	    ;;
        r ) finddepth=''
	    ;;
        \? ) echo -r, -i and -v
	     set +x
	     exit 1
	     ;;
    esac
done

found=$(find . $finddepth -name '*~' -o -name '#*')
if [ -n "$found" ]
then
    /bin/rm $verbose $rmi $found
elif [ -n "$verbose" ]
then
    echo "No files found to ec"
fi
