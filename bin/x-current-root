#!/usr/bin/env bash

# x-current-root

if [ "$1" = '--help' ]
then
    echo "usage: $0 [-width|-height|-h] [--help]"
    echo "       Print width or height of the root window."
    exit 0
fi
[[ "$1" =~ -w ]] && field=width
[[ "$1" =~ -h ]] && field=height

if x-is-available
then
     xwininfo -root | sed -E 's/^\s+//' | grep -iE "^${field}:" | sed 's/.* //'
else
    echo X is not available
    exit 1
fi
