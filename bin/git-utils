# -*- sh -*-
# shellcheck shell=bash

# git-utils

declare scope='git-utils'

git-utils-decode-url ()
{
    local scheme=$1

    local repo
    repo=${scheme##*/}
    scheme=${scheme/\/$repo/}

    local org
    org=${scheme##*/}
    if [[ $org != "$scheme" ]]; then
        scheme=${scheme/\/$org/}
    else
        org=${scheme##*:}
        scheme=${scheme/:$org/}
    fi

    local serverid
    # shellcheck disable=SC2034 #https://github.com/koalaman/shellcheck/wiki/SC2034
    serverid=$scheme

    serverid=${serverid%%.*}
    serverid=${serverid##*@}
    serverid=${serverid##*//}
    serverid=${serverid%%:*}

    echo "$serverid" "$scheme" "$org" "$repo"
}

git-utils-main()
{
    local action=$1

    if [[ "$action" =~ ^-+h ]]; then
        git-usage "$0"
        true; return
    fi

    local action_handler="$scope-$action"
    if declare -F "$action_handler" >/dev/null 2>&1 \
           || which "$action_handler" >/dev/null 2>&1 ; then
        shift ## the $action
        "$action_handler" "$@"
    else
        case $action in
            * )
                cmd-echo --id git-utils --ec --id $scope -- "unknown action '$action'"
                false
                ;;
        esac
    fi
    return
}

git-utils-main "$@"
exit

:<<'__PODUSAGE__'
=head1 NAME

git-utils - bits and pieces that don't belong anywhere else

=head1 SYNOPSIS

git-utils decode-url "git-url"

=head1 DESCRIPTION

Miscellaneous functionality.

=head1 ACTIONS

=over 4

=item decode-url

Given a git url, give back the serverid, scheme, org and repo.

  url='https://github.com/koalaman/shellcheck'
  read -r serverid scheme org repo < <(git utils decode-url "$url")
  echo "#$serverid $scheme $org $repo"
  #github https://github.com koalaman shellcheck

  url='git@github.com:koalaman/shellcheck'
  read -r serverid scheme org repo < <(git utils decode-url "$url")
  echo "#$serverid $scheme $org $repo"
  #github git@github.com koalaman shellcheck

  url='bbgithub:koalaman/shellcheck'
  read -r serverid scheme org repo < <(git utils decode-url "$url")
  echo "#$serverid $scheme $org $repo"
  #bbgithub bbgithub koalaman shellcheck

=cut

__PODUSAGE__
