#!/usr/bin/env bash

# git-what-is-modified-only

##@@ 0001||group||git-what-is-modified-only||git-what-is-modified sans what is deleted

if [ -n "$1" ]
then
    echo 'Files altered: staged, unstaged, without deleted files'
else
    declare deleted=$(ajoin '|' $(git-what-is-deleted))
    declare modified
    for mod in $(git-what-is-modified)
    do
        echo $mod | grep -v -E "$deleted";
    done
fi
