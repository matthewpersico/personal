# -*- sh -*-
# shellcheck shell=bash

declare ceid
ceid=$(basename "$0")

# Read the list
declare list=$1
if [[ -z $list ]]; then
    list="${TILDAE:-$HOME}/perl/local/src/tarballs"
    cmd-echo --wc --id "$ceid" "No list argument specified. Using default of '$list'."
else
    shift;
fi
if [[ ! -r $list ]]; then
    cmd-echo --ec --id "$ceid" "Tarball list $list not readable."
    false; exit
fi

declare prefix=$1
if [[ -z $prefix ]]; then
    prefix="${TILDAE:-$HOME}/perl/local"
    cmd-echo --wc --id "$ceid" "No prefix argument specified. Using default of '$prefix'."
    if [[ ! -d $prefix ]]; then
        mkdir -p "$prefix"
    fi
else
    shift;
fi
if [[ ! -d $prefix ]]; then
    cmd-echo --ec --id  "$ceid" "Directory $prefix not found."
    false; exit
fi

declare tarball
while read -r tarball; do
    if [[ ! $tarball =~ ^# ]]; then
        perl-module-install-local \
            --prefix "$prefix" \
            "$prefix/src/$tarball"
    fi
done < <(cat "$list")
