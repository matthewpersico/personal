#!/usr/bin/env bash

# git-usage

# Perform usage on local git command and then on same real git command.

(
    declare tgt=$1;shift
    [ -n "$*" ] && cmd-echo -- "$@"
    echo "** Extended actions **"
    bash-usage "$tgt"
    echo
    echo "** Standard actions **"
    "$REALGIT" clone --help
) 2>&1 | ${PAGER:-less}
