# -*- sh -*-
RXCmd()
{
	HOST="${1}"
	if [ -z ${HOST} ]
	then
		echo "Error: hostname not specified."
	else
		shift 1
		XARGS="${*}"
		if [ -z "${XARGS}" ]
		then
			XARGS="-geometry 80x24+200+200"
		fi
		if [ "${HOST}" = "${HOSTNAME}" ]
		then
			${XTERM} -display ${DISPLAY} -name ${HOST} ${XARGS} &
		else
			XCOOKIE=`/usr/bin/X11/xauth list ${DISPLAY}`
#			ssh ${HOST} "(
#				PATH=$PATH:/usr/bin/X11
#				DISPLAY=$DISPLAY
#				export PATH DISPLAY
#				xauth add ${XCOOKIE} > /dev/null 2>&1
#				/usr/bin/nohup ${XTERM} -name ${HOST} \
#					${XARGS} >/dev/null 2>&1 &
#			)" &
            ssh ${HOST} "(
				PATH=$PATH:/usr/bin/X11
				DISPLAY=$DISPLAY
				export PATH DISPLAY
				xauth add ${XCOOKIE} >> ~/inlog 2>&1
				/usr/bin/nohup ${XTERM} -name ${HOST} \
					${XARGS} >> ~/inlog 2>&1 &
			)" &
		fi
	fi
}

####
## Start xterm clients
####
case ${HOSTNAME} in
    nylxdev2 )
	xtermcolors='-fg wheat -bg darkblue' ;;
esac

newx()
{
    if [ -n "$*" ]
    then
        RXCmd ${HOSTNAME} $*
    else
        RXCmd ${HOSTNAME} $xtermcolors
    fi
}
