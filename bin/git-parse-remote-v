#!/usr/bin/env bash

# git-parse-remote-v

gitfuncs_remotes=()
declare remotes
remotes=$( git remote -v | sed -r -e 's/\(.*//' -e 's/ +$//' -e 's/\t/=/' | sort -ru)
[ -z "$remotes" ] && exit 1
for i in $remotes
do
    key=${i%=*}
    value=${i#*=}
    # shellcheck disable=SC2034 # Set in env for later use.
    gitfuncs_remotes["$key"]="$value"
done
exit 0
## POD guard
exit 0

## You can add sections with =head1, but stick to =item for section breakdowns,
## not =head2/3/etc/.

:<<'__PODUSAGE__'
=head1 NAME

git-parse-remote-v - script that does something

=head1 SYNOPSIS

 git-parse-remote-v [--option1] [ --option2 optionarg ] arg1 [arg2 ...] 
     [fee] [dfsdfs] [sfsdfsf]

=head1 DESCRIPTION

Describe in general terms what git-parse-remote-v does.

=head1 ARGUMENTS

=over 4

=item arg

Describe what arg does, should be, etc. Add a new =item for each distinct arg.

=back

=head1 OPTIONS

=over 4

=item --option1

Describe what --option1 does.

=item --option2

Describe what --option2 does. Describe what optionarg does.

=over 2

=item *

A choice for optionarg

=item *

Another choice for optionarg

=back

=back

=cut

__PODUSAGE__

