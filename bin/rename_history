#!/usr/bin/env bash

# rename_history

if [ -z "$1" ]
then
    echo usage: rename_history suffix
else
    cp "$HISTFILE" "${HISTFILE}.$1"
    HISTFILE="${HISTFILE}.$1"
fi
echo "Done"
## POD guard
exit 0

