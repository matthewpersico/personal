## -*- sh -*-
if [ "$1" = '' ]
then
    echo Need files or --all
    exit 1
fi

if [ "$1" = '--all' ] || [ "$1" = '-all' ]
then
    ## That's the pattern we set in git-untaint
    files=$(git grep -l -- '##<GCS> -w -T git-untaint' ) ## <GCSLITERAL>
else
    files="$@"
fi

sedinplace -v $files 's/##<GCS> -w -T git-untaint/-wT/' ## <GCSLITERAL>
