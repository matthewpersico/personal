# -*- sh -*-

auditfuncs-init
## no controlfuncs-build - see below

# pathfuncs
PATHFUNCS_DIR=$(dirname ${BASH_SOURCE[0]})/bash_path_funcs

pathfuncs-edit ()
{
    xo ${BASH_SOURCE[0]} $PATHFUNCS_DIR/*
}
safe_func_export pathfuncs-edit

pathfuncs-reload ()
{
    . ${BASH_SOURCE[0]}
}
safe_func_export pathfuncs-reload
alias pathfuncs-load=pathfuncs-reload

## Can't just call pathfuncs-reload - recursion issue.
for i in $PATHFUNCS_DIR/*
do
    . $i
done

auditfuncs-end
