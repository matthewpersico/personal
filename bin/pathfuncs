# -*- sh -*-

# pathfuncs
PATHFUNCS_DIR=$(dirname ${BASH_SOURCE[0]})/bash_path_funcs

pathfuncs_edit ()
{
    xo ${BASH_SOURCE[0]} $PATHFUNCS_DIR/*
}
#nxport -f pathfuncs_edit
alias pathfuncs-edit=pathfuncs_edit

pathfuncs_reload ()
{
    for i in ${BASH_SOURCE[0]} $PATHFUNCS_DIR/*
    do
        . $i
    done
}
#nxport -f pathfuncs_reload
alias pathfuncs-reload=pathfuncs_reload
alias pathfuncs-load=pathfuncs_reload
