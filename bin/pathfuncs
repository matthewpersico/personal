# -*- sh -*-

auditfuncs-init
## no controlfuncs-build - sub files cause recursion issues.

# pathfuncs
PATHFUNCS_DIR=$(dirname ${BASH_SOURCE[0]})/bash_path_funcs

pathfuncs-edit ()
{
    xo ${BASH_SOURCE[0]} $PATHFUNCS_DIR/*
}

pathfuncs-reload ()
{
    . ${BASH_SOURCE[0]}
}

## Can't just call these in pathfuncs-reload - recursion issue.
for i in $PATHFUNCS_DIR/*
do
    . $i
done

safe_func_export --file $PATHFUNCS_FILE

auditfuncs-end
