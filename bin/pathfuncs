# -*- sh -*-

# pathfuncs
PATHFUNCS_DIR=$(dirname ${BASH_SOURCE[0]})/bash_path_funcs

pathfuncs_edit ()
{
    xo $PATHFUNCS_DIR/*
}
export -f pathfuncs_edit
alias pathfuncs-edit=pathfuncs_edit

pathfuncs_reload ()
{
    for i in $PATHFUNCS_DIR/*
    do
        . $i
    done
}
export -f pathfuncs_reload
alias pathfuncs-reload=pathfuncs_reload
alias pathfuncs_load=pathfuncs_reload
alias pathfuncs-load=pathfuncs_reload
