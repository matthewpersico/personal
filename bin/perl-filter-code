#!/usr/bin/env bash

# <Function Class: perl>
# <Function Justification: none>

perl-filter-code ()
{
    local file
    local -a foundperl
    for file in "$@"
    do
        if head -1 "$file" | grep perl | grep -E '^#!' > /dev/null \
                || \
           echo "$file" | grep -iE '\.(p[ml]|t|sgi)$' > /dev/null
        then
            foundperl+=("$i")
        fi
    done
    echo "${foundperl[@]}"
    ((${#foundperl[@]}>0)) && return 0
    return 1
}
