## -*- sh -*-

## Grabs all my processes that have emacs in the command.
## Filters out the grep command
## Filters in where parent ppid is 1 (in case emacs is running a perl debugger
## or some other subprocess)

## Temp file for processing and diagnostic messages.
procs=$(mktemp --suffix=.xo)

## Set up a trap for cleanup.
trap finish EXIT SIGINT
finish ()
{
    if [ -e $procs ]
    then
        rm -rf $procs
    fi
}

##
## Main
##

## Note - named daemon mode doesn't quite work. The defaults as they are now
## allow this script to work as it used to. But, you may also have to turn off
## (server-start) in ~/.emacs.d/taps/mpersico5/before-init.el
daemonname=''
daemonopt=''
serveropt=''
if [ "$1" = '-d' ]
then
    daemonname="$2"
    daemonopt="--daemon=$daemonname"
    serveropt="--server-file=$default"
    shift;shift;
fi

case $(uname -o) in
    GNU/Linux )
        pscmd="ps lx -U ${USER}"
        grepargs='emacs'
        cutrange='15-20'
        ;;
    Cygwin )
        pscmd="ps -l -u ${USER}"
        grepargs='-- emacs-w32'
        cutrange='13-18'
        ;;
    * )
        echo "ps command for $(uname) not defined"
        exit 1
        ;;
esac

## Assume X or some other windowing system is available and do the needful if
## not.
hasX=1
if [ ! "$(uname -o)" = 'Cygwin' ]
then
    pinged=$(which xmodmap 2>&1 | grep 'no xmodmap')
    if [ -n "$pinged" ]
    then
        hasX=0
    else
        pinged=$(xmodmap 2>&1 | grep 'unable to open display')
        if [ -n "$pinged" ]
        then
            hasX=0
        fi
    fi
fi

## Get potential emacs server processes
$pscmd | grep $grepargs | grep -v grep | grep -vi 'emacs -q' >$procs 2>&1
if [ -n "$daemonname" ]
then
    grep -- "$daemonopt" $procs > ${procs}.tmp
    mv ${procs}.tmp $procs
fi

## Count how many
if((hasX))
then
    serverup=$(cut -c $cutrange $procs | grep '    1' | wc -l)
else
    serverup=$(cat $procs | grep 'emacs -nw' | wc -l)
fi

## If we are being used as the git editor or EDITOR, we don't want to start up
## such that the underlying process thinks we're done editing before we are.
as_visual=0
if [ "$1" = '--visual' ]
then
    as_visual=1
    shift
fi

if ((serverup==0))
then
    if ((as_visual==0))
    then
        if (( hasX ))
        then
            emacs $daemonopt "$@" &
        else
            emacs $daemonopt -nw "$@" < /dev/tty
        fi
    else
        echo "No emacs server found. Start one and try again or use -m."
    fi
elif ((serverup==1))
then
    if [ ! "$#" = 0 ]
    then
        if ((as_visual==0))
        then
            emacsclient $serveropt -n -a emacs "$@"
        else
            emacsclient $serveropt -c "$@"
        fi
    else
        echo "Server already up. Specify a file to edit."
    fi
else
    echo "More than one potential emacs server process found:"
    cat $procs
fi
