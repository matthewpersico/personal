#!/usr/bin/env bash

# perl-current-version

## Prints Maj.Min. If $1 == --full, prints Maj.Min.Patch
perl -MConfig -MData::Dumper -e '$x=$Config{version};$x=~s/(\.[0-9]+$)//;print $x'-- "$1"
## POD guard
exit 0

## You can add sections with =head1, but stick to =item for section breakdowns,
## not =head2/3/etc/.

