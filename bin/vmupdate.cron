#!/opt/bb/bin/bash

. ${HOME}/.bash_profile

echo "*** df before ***"
df -h /dev/vda1

echo "*** yum ***"
yum-update -y
echo status=$?

echo "*** apt ***"
echo "* update"
apt-update -y
echo status=$?
echo "* upgrade"
apt-upgrade -y --force-yes
echo status=$?

echo "*** df after  ***"
df -h /dev/vda1
