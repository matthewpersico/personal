#!/usr/bin/env bash

# show_history

echo "$(date) show_history" >> ~/audithiststuff

declare hf
hf="$(basename "$HISTFILE")"
# shellcheck disable=SC2012
ls -lrt "$HISTDIR" | sed "s|$hf|${hf}=current|"
## POD guard
exit 0

## You can add sections with =head1, but stick to =item for section breakdowns,
## not =head2/3/etc/.

