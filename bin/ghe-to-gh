#!/usr/bin/env bash

# ghe-to-gh

# Put changes on ghe to gh
if [[ $1 =~ ^-+h ]] \
   || [[ -z $1 ]]; then
    cat <<EOU
usage: ghe-to-gh source

Take the changes on the branch "source", which should be a branch
on the "origin" remote, and progagate them to

* All the other branches on "origin"
* The branch "gh/source", where "gh" is assumed that "gh" is remote to
  GitHub and the branch "source" exists on GitHub.
EOU
    exit 0
fi

git-branch --sync "$1" origin "gh/$1"
