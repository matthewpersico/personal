#!/usr/bin/env bash

# git-to-stdout-last-existed

# shellcheck disable=SC1090
. "$(which script-echo)" -i git-to-stdout-last-existed

declare file
file=''
if [ "$1" = '-file' ]
then
    file='-file'
    shift;
fi
for f in "$@"
do
    git-to-stdout $file "$(git-find-last-existed "$f")" "$f"
done

## POD guard
exit 0

## You can add sections with =head1, but stick to =item for section breakdowns,
## not =head2/3/etc/.

:<<'__PODUSAGE__'
=head1 NAME

git-to-stdout-last-existed - script that does something

=head1 SYNOPSIS

 git-to-stdout-last-existed [--option1] [ --option2 optionarg ] arg1 [arg2 ...]
     [fee] [dfsdfs] [sfsdfsf]

=head1 DESCRIPTION

Describe in general terms what foo does.

=head1 ARGUMENTS

=over 4

=item arg

Describe what arg does, should be, etc. Add a new =item for each distinct arg.

=back

=head1 OPTIONS

=over 4

=item --option1

Describe what --option1 does.

=item --option2

Describe what --option2 does. Describe what optionarg does.

=over 2

=item *

A choice for optionarg

=item *

Another choice for optionarg

=back

=back

=cut

__PODUSAGE__
