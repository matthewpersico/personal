#!/usr/bin/env bash

declare full=0
if [[ $1 =~ -f ]] || [[ ${*: -1} =~ -f ]]
then
    full=1
fi
if [[ $1 =~ -f ]]
then
    shift
fi
declare version=$1
[[ -z $version ]] && version=$(perl -e 'print substr($^V,1)')
declare -a verparts
IFS="." read -r -a verparts <<< "$version"
if [[ ${#verparts[@]} == 2 ]]
then
    version=$("perl$version" -e 'print substr($^V,1)')
    IFS="." read -r -a verparts <<< "$version"
    if [[ ${#verparts[@]} == 2 ]]
    then
        echo "Can't get full three part version to work with"
        exit 1
    fi
fi
if ((!full))
then
    unset "verparts[2]"
fi
ajoin version -s . "${verparts[@]}"
echo "$version"
