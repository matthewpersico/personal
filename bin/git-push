#!/usr/bin/env bash

# git-push

# shellcheck disable=SC1090
source "$BASH_INC_DIR/on_exit.binc"

if ! git-version-verify 'git-push'
then
    exit 1
fi

# shellcheck disable=SC2034 # We'll use it eventually
cmd_echo_id='git-push'

usage ()
{
    (
        [ -n "$*" ] && cmd-echo -- "$@"
        echo "** Extended actions **"
        script-usage
        echo
        echo "** Standard actions **"
        "$REALGIT" push --help
    ) 2>&1 | ${PAGER:-less}
}

declare opt_popup=0
declare opt_pr=0
declare -a git_push_args
declare more_our_opts=1
declare dispatch_to_real_git=1
while [[ "$1" =~ ^- ]] && ((more_our_opts))
do
    declare original="$1"
    declare option
    option=$(dashstripper "$original")
    shift ## That way you avoid endless loops on invalid options.
    ## This bit deals with --foo=bar instead of --foo bar
    declare okey
    declare ovalue=''
    if [[ "$option" =~ = ]]
    then
        okey=${option%%=*}
        # shellcheck disable=SC2034 # We'll use it eventually
        ovalue=${option#*=}
        option="$okey"
    fi

    case $option in
        ##
        ## Our options
        ##
        popup )
            opt_popup=1
            more_our_opts=0;;
        pr )
            opt_pr=1
            more_our_opts=0;;
        ##
        ## Options to pass onto real git push
        ##
        * )
            git_push_args+=("$original")
            ;;
    esac
done

git_push_args+=("$@")
if ((dispatch_to_real_git))
then
    ## There are no options specified that make us think we want to run our
    ## push code; go run system git push.
    "$REALGIT" push "${git_push_args[@]}" || exit $?
fi

if ((opt_popup || opt_pr))
then
    declare remote
    remote=$(git-get-default-remote)
    declare svc
    svc=${remote%:*}
    declare repo
    repo=${remote#*:}

    declare statusdata
    statusdata=$(mktemp -t tmp.git-web.statusdata.$$.XXXXXXXXXX)
    rm_on_exit "$statusdata"
    git status --porcelain -b -uno > "$statusdata"
    declare linecount
    linecount=$(wc -l < "$statusdata")
    declare outofdate
    outofdate=$(grep '##' "$statusdata" | grep '\[')
    if ((linecount > 1)) || [ -n "$outofdate" ]
    then
        cmd-echo -w -- "Current status not clean:"
        git status
    fi

    declare url
    if ((opt_pr))
    then
        if ! url=$(git-find-local-pr)
        then
            ## no PR found, use new pr url
            declare cb
            cb="$(git branch get-current)"

            url="$(kvstore get gitfuncs_git_browser_urls "$svc")/$repo/pull/new/$cb"
            if [ "$cb" = 'master' ]
            then
                cmd-echo -w -- "Using the 'master' branch on a clone won't work; you've already pushed to master."
            fi
        fi
    else
        url="$(kvstore get gitfuncs_git_browser_urls "$svc")/$repo"
    fi

    git web--browse "$url" &
fi

exit 0

## You can add sections with =head1, but stick to =item for section breakdowns,
## not =head2/3/etc/. If you want just plain text, get rid of pod tags and the
## 'POD' in __PODUSAGE__.

:<<'__PODUSAGE__'
=head1 NAME

git-push - extension to git push

=head1 SYNOPSIS

 git-push [--popup|--pr] ...

=head1 DESCRIPTION

Adds a few options to git push. Without any of these options, just calls the real git push. Otherwise, calls git push with some additional actions.

=head1 OPTIONS

=over 4

=item popup

Start a browser (via git web--browser) pointing to the URL of the origin for the current repo.

=item pr

Start a browser (via git web--browser) pointing to the URL to create a new pull request using the current repo as the source.

=back

__PODUSAGE__
