#!/usr/bin/env bash

if [[ $1 =~ -h ]]
then
    bash-usage "$0"
    exit 0
fi

declare date_format='%Y/%m/%d'
if [[ $1 == '--date-format' ]]
then
    shift
    date_format="$1"
    shift
fi
set -x
declare -a dateargs
# shellcheck disable=SC2207 #https://github.com/koalaman/shellcheck/wiki/SC2207
dateargs=($(date '+--year %Y --month %_m --day %_d' -d "$*"))
declare val
val=$(zenity --calendar "${dateargs[@]}" --date-format="$date_format" 2>/dev/null)
if [[ -z $val ]]
then
    exit 1
else
    echo "$val"
    exit 0
fi

:<<'__PODUSAGE__'
=head1 NAME

zencal - Display a zenity calendar and get the chosen date

=head1 SYNOPSIS

 zencal [--date-format strftimeformat ] [inputdate]

=head1 DESCRIPTION

Display a zenity calendar and get the chosen date. The dialog has 'Cancel' and
'Ok' buttons. Selecting 'Cancel' results in no output and a return of 1
(failure). Selecting 'Ok' prints the date the user selected and returns 0
(success).

=head1 ARGUMENTS

=over 4

=item inputdate

If not specified, then 'today'. Otherwise, any date expression that the '-d'
option to the 'date' utility would recognize as valid.

=back

=head1 OPTIONS

=over 4

=item --out-format

An 'strftime'-compatable format string used to format the output. Defauklt is %Y/%m/%d.

=back

=cut

__PODUSAGE__
