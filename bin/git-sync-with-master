#!/usr/bin/env bash

# git-sync-with-master\n\n# shellcheck disable=SC1090\n. "$(which script-echo)" -i "$current_file"\n
script-echo -i git-sync-with-master
declare cea
cea="$CMD_ECHO_AS"

declare status

declare -A gitfuncs_remotes
git-parse-remote-v
## clone-and-fork repos need to sync with the master in the canonical
## upstream branch.  If there is no 'upstream', then it's probably a clone
## only, so sync against the master in origin.
if [ -n "${gitfuncs_remotes[upstream]}" ]
then
    CMD_ECHO_AS=$cea git-sync-with-remote --remote upstream --branch master "$@"
elif [ -n "${gitfuncs_remotes[origin]}" ]
then
    CMD_ECHO_AS=$cea git-sync-with-remote --remote origin --branch master "$@"
fi
status=$?

exit $status
## POD guard
exit 0

## You can add sections with =head1, but stick to =item for section breakdowns,
## not =head2/3/etc/.

:<<'__PODUSAGE__'
=head1 NAME

git-sync-with-master - script that does something

=head1 SYNOPSIS

 git-sync-with-master [--option1] [ --option2 optionarg ] arg1 [arg2 ...] 
     [fee] [dfsdfs] [sfsdfsf]

=head1 DESCRIPTION

Describe in general terms what git-sync-with-master does.

=head1 ARGUMENTS

=over 4

=item arg

Describe what arg does, should be, etc. Add a new =item for each distinct arg.

=back

=head1 OPTIONS

=over 4

=item --option1

Describe what --option1 does.

=item --option2

Describe what --option2 does. Describe what optionarg does.

=over 2

=item *

A choice for optionarg

=item *

Another choice for optionarg

=back

=back

=cut

__PODUSAGE__

