#!/opt/bb/bin/bash

ev=0
if [[ "$1" != 'silent' ]]; then

    echo args are "$@"

    echo
    echo Environment variables are
    env | sort | grep -E '^[A-Za-z_]+='

    echo
    if [[ $1 = 'exit1' ]]; then
        shift
        echo will exit 1
    ev=1
    else
        echo will exit 0
    fi

    echo
    echo CRON is "$CRON"

    echo
    echo PATH is
    listpath

    echo
    echo Environment variables are
    env | sort | grep -E '^[A-Za-z_]+='

    echo
    echo Loaded functions are are
    env | sort | grep -E '^BASH'
fi

exit $ev
